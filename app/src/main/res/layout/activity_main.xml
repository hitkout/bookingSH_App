<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym1"
    android:foregroundGravity="center"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/prompt"
        android:gravity="center"
        android:text="Made by:\nOsminkin Nikita\nLobanov Aleksandr"
        android:textColor="@color/made"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/logo_back"
        android:fontFamily="@font/prompt_semibold"
        android:gravity="center_horizontal"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/logo_txt"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/logo"
        app:tint="@color/logo_badge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_bottom"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="112dp"
        android:orientation="vertical"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/prompt"
            android:text="@string/btn_sign_in"
            android:visibility="visible"
            app:backgroundTint="@color/btn"
            tools:layout_editor_absoluteY="19dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/prompt"
            android:text="@string/btn_register"
            app:backgroundTint="@color/btn"
            tools:layout_editor_absoluteY="19dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>