<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/linearLayoutCap"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/logo_back"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/logo"
            app:tint="@color/logo_badge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_semibold"
            android:gravity="center_horizontal"
            android:text="@string/logo"
            android:textAlignment="center"
            android:textColor="@color/logo_txt"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/back_top"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCap">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt"
            android:text="TextView"
            android:textColor="@color/logo_txt"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutText">

        <TextView
            android:id="@+id/textViewInfoInSignUpPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="в кабинете ... людей, запишитесь скорей!" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Записаться" />
        <Button
            android:id="@+id/btnUnsubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отменить бронирование" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>